@model AppWorkFlow.Data.Entity.FlowRequest

<form class="kt-form kt-form--label-right" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="IsNewRequest" />

    <div class="kt-portlet__body">
        <div class="form-group row">

            <div class="col-lg-12">
                <label>Name:</label>
                <input asp-for="Name" required class="form-control">
            </div>

            <div class="col-lg-12">
                <label>Group:</label>
                <select required asp-for="WorkFlowId" class="form-control" asp-items="@(new SelectList(Model.EnumerableWorkFlows, "Id", "Name"))">
                </select>
            </div>
        </div>
    </div>
    <div class="kt-portlet__foot">
        <div class="kt-form__actions">
            <div class="row">
                <div class="col-lg-6">
                    <button id="btnPost" asp-page="/requests" asp-page-handler="Save" type="submit" class="btn btn-primary">Save</button>
                    <button type="reset" class="btn btn-secondary">Cancel</button>
                </div>
            </div>
        </div>
    </div>
</form>

