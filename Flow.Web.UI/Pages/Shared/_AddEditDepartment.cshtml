
@model AppWorkFlow.Data.Entity.Department

<form class="kt-form kt-form--label-right" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input type="hidden" asp-for="Id" />

    <div class="kt-portlet__body">
        <div class="form-group row">

            <div class="col-lg-12">
                <label>Name:</label>
                <input asp-for="Name" required class="form-control">
            </div>
            <div class="col-lg-12">
                <label>Description:</label>
                <input asp-for="Description" required class="form-control">
            </div>
            <div class="col-lg-12">
                <label>Department Head:</label>
                <select required asp-for="UserHeadId" class="form-control" asp-items="@(new SelectList(Model.UsersEnumerable, "Id", "Name"))">
                </select>
            </div>
        </div>
    </div>
    <div class="kt-portlet__foot">
        <div class="kt-form__actions">
            <div class="row">
                <div class="col-lg-6">
                    <button id="btnPost" asp-page="/users" asp-page-handler="SaveDepartment" type="submit" class="btn btn-primary">Save</button>
                    <button type="reset" class="btn btn-secondary">Cancel</button>
                </div>
            </div>
        </div>
    </div>
</form>


