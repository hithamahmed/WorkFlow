@*@model AppWorkFlow.Data.Entity.FlowRequestAction*@
@model WFlow.Core.DTO.RequestActionDTO

<form class="kt-form kt-form--label-right" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input type="hidden" asp-for="FlowRequestId" />

    <div class="kt-portlet__body">
        <div class="form-group row">


            <div class="col-lg-12">
                <label>Action:</label>
                <select required asp-for="RequestStatus" class="form-control" asp-items="@Html.GetEnumSelectList<AppWorkFlow.Core.Enums.FlowAction>()">
                </select>
            </div>

            <div class="col-lg-12">
                <label>Redirect To:</label>
                <select required asp-for="RedirectToDepartmentId" class="form-control" asp-items="@(new SelectList(Model.DepartmentEnumerable, "Id", "Name"))">
                </select>
            </div>
        </div>
    </div>
    <div class="kt-portlet__foot">
        <div class="kt-form__actions">
            <div class="row">
                <div class="col-lg-6">
                    <button id="btnPost" asp-page="/departmentRequests" asp-page-handler="Save" type="submit" class="btn btn-primary">Save</button>
                    <button type="reset" class="btn btn-secondary">Cancel</button>
                </div>
            </div>
        </div>
    </div>
</form>

